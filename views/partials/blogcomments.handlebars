{{#each comments as |comment|}}
<section>
  <div class="comment-list">
    <div>
      <h4>{{comment.content}}</h4>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
    <footer>
      {{user.name}} commented on {{format_date date_created}}
    </footer>
  </div>
</section>
{{/each}}