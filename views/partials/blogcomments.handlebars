  <section class="comment-list w-100">
  {{#each comments as |comment|}}
  <div class=" card post-card ">
    <p class="text-lg">{{comment.content}}</p>
  
  
    <div class="post-card-footer">
      <span class="timestamp">{{user.name}} commented on {{format_date date_created}}</span>
      <button  data-id="{{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
  </section>
