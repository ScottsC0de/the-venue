{{#each comments as |comment|}}
<div class=" card post-card comment-list">
  <p class="text-lg">{{comment.content}}</p>


  <div class="post-card-footer">
    <p class="timestamp">{{user.name}} commented on {{format_date date_created}}</p>
    <button class="comment-list" data-id="{{comment.id}}">DELETE</button>
  </div>
</div>
{{/each}}