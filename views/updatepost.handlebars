<h2>
  Edit Your Shared Music Post
</h2>

<div class="card post-card">
  <div class="post-card-header">
    <div class="post-img-card">
      <img src="{{image}}" alt="{{track_name}}{{artists_name}}{{playlist_name}}">

    </div>
    <div class="post-card-header-title">
      <h3>
        {{track_name}}
        {{artists_name}}
        {{playlist_name}}
      </h3>

    </div>
  </div>
</div>
<form class="edit-post-form">
  <label for="post-name">Post title:</label>
  <textarea class="form-input" name="post-name" type="text" id="post-name" rows="3">{{name}}</textarea>
  <label for="post-desc">Post content:</label>
  <textarea class="form-input" name="post-desc" id="post-desc" rows="10">{{description}}</textarea>
  <div class="post-card-footer">
    <span class="timestamp">Posted by you on {{format_date date_created}}
    </span>



    <button type="submit" id="updatePost">Save post</button>
  </div>

</form>

<script src="/js/updatepost.js"></script>